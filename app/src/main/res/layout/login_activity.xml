<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="examplelibrarydesign.com.examplelibrarydesing.view.activity.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_login"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imv_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/robot"
            android:visibility="gone" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/lly_container_login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_rigth_20dp"
        android:layout_marginLeft="@dimen/magin_left_20dp"
        android:layout_marginRight="@dimen/margin_rigth_20dp"
        android:layout_marginStart="@dimen/magin_left_20dp"
        android:layout_weight="1"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:windowSoftInputMode="stateHidden">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/email" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_rigth_10dp"
                    android:layout_marginLeft="@dimen/margin_left_10dp"
                    android:layout_marginRight="@dimen/margin_rigth_10dp"
                    android:layout_marginStart="@dimen/margin_left_10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/gray_hint_edittext"
                    android:textSize="20sp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/password" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_rigth_10dp"
                    android:layout_marginLeft="@dimen/margin_left_10dp"
                    android:layout_marginRight="@dimen/margin_rigth_10dp"
                    android:layout_marginStart="@dimen/margin_left_10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/gray_hint_edittext"
                    android:textSize="20sp" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp" />

    </LinearLayout>


</LinearLayout>



